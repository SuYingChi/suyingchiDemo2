<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	android:orientation="vertical">

	<include layout="@layout/custom_theme_head_common"
	         android:layout_width="match_parent"
	         android:layout_height="50dp"
		/>

	<ScrollView
		android:layout_marginLeft="5dp"
		android:layout_marginRight="5dp"
		android:layout_marginTop="5dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<TextView
				android:id="@+id/custom_theme_item_title_1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="6dp"
				android:gravity="start"/>
			<android.support.v7.widget.RecyclerView
				android:id="@+id/custom_theme_item_recycler_view_1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="2dp"/>

			<TextView
				android:id="@+id/custom_theme_item_title_2"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="6dp"
				android:gravity="start"/>

			<android.support.v7.widget.RecyclerView
				android:id="@+id/custom_theme_item_recycler_view_2"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="2dp"
				/>
		</LinearLayout>

	</ScrollView>

</LinearLayout>
